/* pages/applicationModule/clock/clockStyle/clockOne/clockOne.wxss */

image{
  width: 100vw;
  max-height: 100vh;
  height: 100%;
  position: absolute;
}
.timeView{
  display:flex;
  flex-direction:column;
  width: 100vw;
  height:100vh;
  align-items: center;
  justify-content: center;
  transition: all 1s;
  position: fixed;
  top: 0;
  left: 0;
  
}
.time{
  font-size: 110rpx;
}
.backButtonView{
  position: absolute;
  top: 20px;
  left: 30px;
  z-index: 1;
}
.setButtonView{
  position: absolute;
  top: 20px;
  left: 80px;
  z-index: 1;
}
.colorButtonView{
  position: absolute;
  top: 20px;
  left: 130px;
  z-index: 1;
}

.backButton{
  padding: 5px 10px;
  border-radius: 50px;
  font-size: 12px;
}


.modelBlack{
  position: absolute;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  font-size: 15px;
  z-index: 2;
}
.modelView{
  width: 300px;
  background-color: #fff;
  padding: 10px 0;
  margin: 100px auto;
  border-radius: 10px;
  position: relative;
}
.optionView{
  display: flex;
  justify-content: center;
}
.option{
  padding:10px 20px;
  flex: 1;
  margin: 0 10px;
  text-align: center;
  
}
.close{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  text-align: center;
  font-size: 20px;
  line-height: 30px;
  position: absolute;
  top: -10px;
  left:-10px;
  z-index: 2;
}