/* pages/applicationModule/counter/counter.wxss */
page{
  background-color: #ffffff;
}
.numberShow{
  font-size: 150rpx;
  text-align: center;
  padding: 200rpx 0;
}
.buttonSet{
  display: flex;
  font-size: 45rpx;
  justify-content: space-evenly;
}
.button{
  border-radius: 50%;
  margin: 0 30rpx;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  transition: all 0.5s;
 
  }

  .button:active{
    transform: scale(1.1);
    opacity: 0.7;
  }

  .resetbtn{
    font-size: 40rpx;
    padding: 10rpx 30rpx;
    border-radius: 50px;
    margin: 140rpx auto;
    text-align: center;
    width: 200rpx;
    transition: all 0.5s;
  }
  .resetbtn:active{
    color: #fff;
    background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
   
  }
  input{
    text-align: left;
  }