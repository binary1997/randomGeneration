  width: 85vw;
  height: 70vh;
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 0 6px rgba(0, 0, 0, .3);
}

.showWindow {
  width: 70vw;
  height: 15vh;
  background: #fff;
  display: flex;
  box-shadow: 0 0 6px rgba(0, 0, 0, .3);
  border-radius: 15rpx;
  margin: 76rpx auto;
}

