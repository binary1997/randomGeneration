/* pages/applicationModule/coinTossing/coinTossing.wxss */
.coinView{
  width: 400rpx;
  height: 400rpx;
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0 3px 12px rgba(152, 166, 167, 0.8);
  position: relative;
  overflow: hidden;
  
}
.pedestal{
  text-align: center;
  margin: 120rpx auto 0 auto;
  
}
.startText{
  text-align: center;
  line-height: 400rpx;
  color:#fff;
  font-size: 60rpx;
  
  position: relative;
  z-index: 100;
  transition: all .5s;
}

.shape_one{
  width: 400rpx;
  height: 0rpx;
  position: absolute;
  background: #f37b1d;
  
  top: 0;
  transition: all .5s;
}
.shape_two{
  width: 400rpx;
  height: 0rpx;
  position: absolute;
  background: #007cff;
  bottom: 0;
  transition: all .5s;
}
.color_orange{
  color: #f37b1d;
  transition: all .5s;
}
.color_blue{
  color: #007cff;
  transition: all .5s;
}

.start{
  animation: rotateplane .5s 10 ease-in-out;
}

@keyframes rotateplane {
  0% {
    transform: rotateX(0deg);
   
  }
  50% {
    transform: rotateX(180deg);
   
  }
  100% {
    transform: rotateX(360deg) ;
  
  }
} 